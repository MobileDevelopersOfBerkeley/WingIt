<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mdb.wingit.wingit.StartOptions">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="What would you like to do?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="24sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/option1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="41dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="34dp"
        android:layout_marginTop="110dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="34dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/food"
            android:id="@+id/imageView"
            tools:layout_editor_absoluteY="110dp"
            tools:layout_editor_absoluteX="84dp"
            android:layout_weight="1" />

        <TextView
            android:text="Food"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="191dp"
            tools:layout_editor_absoluteX="155dp"
            android:id="@+id/textView2"
            android:gravity="center"
            android:textSize="20sp"
            android:textAlignment="center"
            android:paddingLeft="0dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option2"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="199dp"
        app:layout_constraintLeft_toLeftOf="@+id/option3">

        <ImageView
            app:srcCompat="@drawable/activity"
            android:id="@+id/imageView2"
            tools:layout_editor_absoluteY="176dp"
            tools:layout_editor_absoluteX="84dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="192dp"
            tools:layout_editor_absoluteX="163dp"
            android:id="@+id/textView3"
            android:text="Sightsee"
            android:textSize="20sp"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:id="@+id/option3"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/option2"
        android:layout_marginTop="74dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="74dp"
        app:layout_constraintLeft_toLeftOf="@+id/option1"
        app:layout_constraintTop_toTopOf="@+id/option1">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/sightseeing"
            android:id="@+id/imageView3"
            tools:layout_editor_absoluteY="242dp"
            tools:layout_editor_absoluteX="82dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="144dp"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="254dp"
            tools:layout_editor_absoluteX="156dp"
            android:id="@+id/textView4"
            android:gravity="center"
            android:text="Activities"
            android:textSize="20sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
