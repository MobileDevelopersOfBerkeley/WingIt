<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_curr_option"
        android:layout_gravity="center"
        android:layout_width="228dp"
        android:layout_height="293dp"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="48dp"
        card_view:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        card_view:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        card_view:layout_constraintHorizontal_bias="0.47"
        card_view:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        card_view:layout_constraintVertical_bias="0.25">

        <android.support.constraint.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="TextView"
                android:layout_width="196dp"
                android:layout_height="35dp"
                android:id="@+id/activityTitle"
                android:layout_marginEnd="16dp"
                card_view:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                card_view:layout_constraintTop_toTopOf="parent"
                android:textAlignment="center"/>

            <ImageView
                android:layout_width="196dp"
                android:layout_height="218dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/activityPic"
                android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toBottomOf="@+id/activityTitle"
                android:layout_marginEnd="16dp"
                card_view:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                card_view:layout_constraintVertical_bias="0.0" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>




</android.support.constraint.ConstraintLayout>